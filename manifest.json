{
  "manifest_version": 3,
  "name": "Simulating accessibility personas",
  "description": "This extension simulates accessibility personas by altering the style and behavior of the currently active browser tab.",
  "icons": {
    "16": "images/icon_16px.png",
    "48": "images/icon_48px.png",
    "128": "images/icon_128px.png"
  },
  "version": "1.0",
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "personas/**/*.css",
        "personas/**/*.js",
        "personas/**/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
